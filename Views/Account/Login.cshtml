@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <h2 class="card-title text-center mb-4">Welcome Back</h2>
                <p class="text-muted text-center mb-4">Sign in to your account to continue</p>

                <form method="post" asp-controller="Account" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label fw-semibold">Username</label>
                        <input class="form-control form-control-lg" asp-for="Username" placeholder="Enter your username" />
                        <span class="text-danger d-block mt-1" asp-validation-for="Username"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label fw-semibold">Password</label>
                        <input class="form-control form-control-lg" type="password" asp-for="Password" placeholder="Enter your password" />
                        <span class="text-danger d-block mt-1" asp-validation-for="Password"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg fw-semibold">Login</button>
                    </div>
                    <button type="reset" class="btn btn-outline-secondary w-100 mt-2">Clear Form</button>

                    <div class="text-center mt-4">
                        <p class="text-muted">Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none fw-semibold">Register here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}