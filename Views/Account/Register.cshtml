@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <h2 class="card-title text-center mb-4">Create New Account</h2>
                <p class="text-muted text-center mb-4">Join us by filling in the details below</p>

                <form method="post" asp-controller="Account" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-semibold">Full Name</label>
                        <input class="form-control form-control-lg" asp-for="Name" placeholder="Enter your full name" />
                        <span class="text-danger text-sm-start" asp-validation-for="Name"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Mobile" class="form-label fw-semibold">Mobile Number</label>
                        <input asp-for="Mobile" class="form-control form-control-lg" type="tel" maxlength="10"
                            pattern="[0-9]{10}" placeholder="Enter your mobile number"
                            oninput="this.value=this.value.replace(/[^0-9]/g,'')" />

                        <span class="text-danger d-block mt-1" asp-validation-for="Mobile"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label fw-semibold">Username</label>
                        <input class="form-control form-control-lg" asp-for="Username"
                            placeholder="Choose a username" />
                        <span class="text-danger d-block mt-1" asp-validation-for="Username"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Role" class="form-label fw-semibold">Role</label>
                        <select class="form-select form-select-lg" asp-for="Role">
                            <option value="">-- Select a role --</option>
                            <option value="Admin">Admin</option>
                            <option value="User">User</option>
                        </select>
                        <span class="text-danger d-block mt-1" asp-validation-for="Role"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label fw-semibold">Password</label>
                        <input class="form-control form-control-lg" type="password" asp-for="Password"
                            placeholder="Create a strong password" />
                        <span class="text-muted d-block mt-1">Min 6-12 characters: uppercase, lowercase, number, and
                            special character</span>
                        <span class="text-danger text-sm-start" asp-validation-for="Password"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg fw-semibold">Register</button>
                    </div>
                    <button type="reset" class="btn btn-outline-secondary w-100 mt-2">Clear Form</button>

                    <div class="text-center mt-4">
                        <p class="text-muted">Already have an account? <a asp-controller="Account" asp-action="Login"
                                class="text-decoration-none fw-semibold">Login here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}